<body>
  <div class="container">
    <div class="header">
      <h1>üöí Fire Fighting Car</h1>
      <div class="status">
        <div class="status-dot" id="statusDot"></div>
        <span id="statusText">Disconnected</span>
      </div>
    </div>

    <div class="fire-alert" id="fireAlert">
      <h2>üî• FIRE DETECTED!</h2>
      <p>Relay & Buzzer Activated ‚Ä¢ Extinguishing...</p>
    </div>

    <button class="connect-btn" id="connectBtn">Connect to HC-06</button>

    <div class="info-panel">
      <div class="info-row">
        <span class="info-label">üîç Servo Status:</span>
        <span class="info-value" id="servoStatus">Scanning 60¬∞-120¬∞</span>
      </div>
      <div class="info-row">
        <span class="info-label">üí® Fan Control:</span>
        <span class="info-value">Relay (Pin 12)</span>
      </div>
      <div class="info-row">
        <span class="info-label">üîä Buzzer:</span>
        <span class="info-value">Pin 2</span>
      </div>
    </div>

    <div class="speed-control">
      <div class="speed-label">
        <span>üöó Speed Control</span>
        <span id="speedValue">3</span>
      </div>
      <input type="range" class="speed-slider" id="speedSlider" min="0" max="9" value="3">
    </div>

    <div class="controller">
      <div class="empty"></div>
      <button class="control-btn" id="forwardBtn">‚¨ÜÔ∏è</button>
      <div class="empty"></div>
      
      <button class="control-btn" id="leftBtn">‚¨ÖÔ∏è</button>
      <button class="control-btn stop-btn" id="stopBtn">STOP</button>
      <button class="control-btn" id="rightBtn">‚û°Ô∏è</button>
      
      <div class="empty"></div>
      <button class="control-btn" id="backwardBtn">‚¨áÔ∏è</button>
      <div class="empty"></div>
    </div>

    <div class="log" id="log">
      <div class="log-entry">üí° Press Connect to start</div>
      <div class="log-entry">üîç Servo scans 60¬∞-120¬∞ (slower & smoother)</div>
      <div class="log-entry">‚ö° Relay controls fan motor</div>
    </div>
  </div>

  <script>
    let bluetoothDevice = null;
    let characteristic = null;
    let isConnected = false;
    let activeButton = null;
    let isSending = false;  // Prevent overlapping sends
    let commandQueue = [];  // Queue for commands

    const connectBtn = document.getElementById('connectBtn');
    const statusDot = document.getElementById('statusDot');
    const statusText = document.getElementById('statusText');
    const speedSlider = document.getElementById('speedSlider');
    const speedValue = document.getElementById('speedValue');
    const logDiv = document.getElementById('log');
    const fireAlert = document.getElementById('fireAlert');
    const servoStatus = document.getElementById('servoStatus');

    const buttons = {
      forward: document.getElementById('forwardBtn'),
      backward: document.getElementById('backwardBtn'),
      left: document.getElementById('leftBtn'),
      right: document.getElementById('rightBtn'),
      stop: document.getElementById('stopBtn')
    };

    // Log function
    function log(message, isFire = false) {
      const entry = document.createElement('div');
      entry.className = 'log-entry' + (isFire ? ' fire' : '');
      entry.textContent = `${new Date().toLocaleTimeString()}: ${message}`;
      logDiv.insertBefore(entry, logDiv.firstChild);
      if (logDiv.children.length > 20) {
        logDiv.removeChild(logDiv.lastChild);
      }
    }

    // Update status
    function updateStatus(connected) {
      isConnected = connected;
      if (connected) {
        statusDot.classList.add('connected');
        statusText.textContent = 'Connected - Scanning';
        connectBtn.textContent = 'Disconnect';
        connectBtn.disabled = false;
      } else {
        statusDot.classList.remove('connected');
        statusText.textContent = 'Disconnected';
        connectBtn.textContent = 'Connect to HC-06';
        connectBtn.disabled = false;
      }
    }

    // Send command with queue system
    async function sendCommand(command) {
      if (!isConnected || !characteristic) {
        log('‚ùå Not connected');
        return;
      }

      // Add to queue
      commandQueue.push(command);
      
      // Process queue if not already sending
      if (!isSending) {
        processQueue();
      }
    }

    // Process command queue
    async function processQueue() {
      if (commandQueue.length === 0) {
        isSending = false;
        return;
      }

      isSending = true;
      const command = commandQueue.shift();

      try {
        const encoder = new TextEncoder();
        await characteristic.writeValue(encoder.encode(command));
        await new Promise(resolve => setTimeout(resolve, 50)); // 50ms delay between commands
      } catch (error) {
        log(`‚ùå Error: ${error.message}`);
      }

      // Process next command
      processQueue();
    }

    // Parse Arduino messages
    function parseArduinoMessage(message) {
      if (message.includes('FIRE_DETECTED')) {
        fireAlert.classList.add('active');
        servoStatus.textContent = 'üî• Fire Located!';
        log('üî• FIRE DETECTED! Relay ON, Buzzer ON', true);
        
        // Vibrate if supported
        if (navigator.vibrate) {
          navigator.vibrate([200, 100, 200, 100, 200]);
        }
      } else if (message.includes('FIRE_CLEARED')) {
        fireAlert.classList.remove('active');
        servoStatus.textContent = 'Scanning 60¬∞-120¬∞';
        log('‚úÖ Fire cleared. Relay OFF, Buzzer OFF', true);
      } else if (message.includes('Angle:')) {
        const angle = message.split(':')[1].trim();
        log(`üìç Fire detected at ${angle}¬∞`);
      } else if (message.includes('Relay ON')) {
        log('‚ö° Relay activated - Fan running');
      } else if (message.includes('Buzzer ON')) {
        log('üîä Buzzer alarm activated');
      }
    }

    // Speed slider with debounce
    let speedTimeout = null;
    speedSlider.addEventListener('input', (e) => {
      const speed = e.target.value;
      speedValue.textContent = speed;
      
      // Debounce - only send after user stops moving slider
      clearTimeout(speedTimeout);
      speedTimeout = setTimeout(() => {
        sendCommand(speed);
        log(`üöó Speed set to: ${speed}`);
      }, 200);  // Wait 200ms after user stops sliding
    });

    // Connect button
    connectBtn.addEventListener('click', async () => {
      if (isConnected) {
        if (bluetoothDevice && bluetoothDevice.gatt.connected) {
          bluetoothDevice.gatt.disconnect();
        }
        updateStatus(false);
        log('üîå Disconnected');
        return;
      }

      try {
        connectBtn.disabled = true;
        connectBtn.textContent = 'Connecting...';
        log('üîç Searching for HC-06...');

        bluetoothDevice = await navigator.bluetooth.requestDevice({
          filters: [{ namePrefix: 'HC-' }],
          optionalServices: ['0000ffe0-0000-1000-8000-00805f9b34fb']
        });

        log('üì° Connecting...');
        const server = await bluetoothDevice.gatt.connect();
        const service = await server.getPrimaryService('0000ffe0-0000-1000-8000-00805f9b34fb');
        characteristic = await service.getCharacteristic('0000ffe1-0000-1000-8000-00805f9b34fb');

        // Listen for Arduino messages
        await characteristic.startNotifications();
        characteristic.addEventListener('characteristicvaluechanged', (event) => {
          const value = new TextDecoder().decode(event.target.value);
          parseArduinoMessage(value);
        });

        updateStatus(true);
        log('‚úÖ Connected! Servo scanning...');

        // Set initial speed
        sendCommand(speedSlider.value);

        bluetoothDevice.addEventListener('gattserverdisconnected', () => {
          updateStatus(false);
          fireAlert.classList.remove('active');
          servoStatus.textContent = 'Scanning 60¬∞-120¬∞';
          log('üîå Device disconnected');
        });
      } catch (error) {
        log(`‚ùå Connection failed: ${error.message}`);
        updateStatus(false);
      }
    });

    // Button handlers with press-and-hold (throttled)
    function setupButton(btn, command, label) {
      let pressTimeout = null;
      let isPressed = false;

      const startCommand = () => {
        if (!isConnected || isPressed) return;
        isPressed = true;
        btn.classList.add('pressed');
        sendCommand(command);
        log(`‚ñ∂Ô∏è ${label}`);
        activeButton = command;
      };

      const stopCommand = () => {
        if (!isConnected || !isPressed) return;
        isPressed = false;
        btn.classList.remove('pressed');
        
        // Debounce stop command
        clearTimeout(pressTimeout);
        pressTimeout = setTimeout(() => {
          sendCommand('S');
          if (activeButton === command) {
            log(`‚èπÔ∏è Stopped`);
            activeButton = null;
          }
        }, 100);
      };

      // Touch events
      btn.addEventListener('touchstart', (e) => {
        e.preventDefault();
        startCommand();
      });

      btn.addEventListener('touchend', (e) => {
        e.preventDefault();
        stopCommand();
      });

      // Mouse events
      btn.addEventListener('mousedown', startCommand);
      btn.addEventListener('mouseup', stopCommand);
      btn.addEventListener('mouseleave', stopCommand);
    }

    setupButton(buttons.forward, 'U', 'Forward');
    setupButton(buttons.backward, 'D', 'Backward');
    setupButton(buttons.left, 'L', 'Left');
    setupButton(buttons.right, 'R', 'Right');

    // Stop button - immediate stop
    buttons.stop.addEventListener('click', () => {
      buttons.stop.classList.add('pressed');
      sendCommand('S');
      log('üõë Emergency Stop');
      setTimeout(() => buttons.stop.classList.remove('pressed'), 200);
      activeButton = null;
    });

    // Keyboard support with debounce
    const keyMap = {
      'ArrowUp': 'U',
      'ArrowDown': 'D',
      'ArrowLeft': 'L',
      'ArrowRight': 'R',
      'w': 'U',
      's': 'D',
      'a': 'L',
      'd': 'R',
      ' ': 'S'
    };

    let activeKeys = new Set();
    let keyTimeout = null;

    document.addEventListener('keydown', (e) => {
      if (!isConnected || activeKeys.has(e.key)) return;
      
      const command = keyMap[e.key];
      if (command) {
        e.preventDefault();
        activeKeys.add(e.key);
        sendCommand(command);
        
        if (command !== 'S') {
          log(`‚å®Ô∏è ${e.key.toUpperCase()}`);
        }
      }
    });

    document.addEventListener('keyup', (e) => {
      if (!isConnected) return;
      
      const command = keyMap[e.key];
      if (command && command !== 'S') {
        e.preventDefault();
        activeKeys.delete(e.key);
        
        // Debounce keyup
        clearTimeout(keyTimeout);
        keyTimeout = setTimeout(() => {
          sendCommand('S');
          log('‚èπÔ∏è Stopped');
        }, 100);
      }
    });
  </script>
</body>
</html>
